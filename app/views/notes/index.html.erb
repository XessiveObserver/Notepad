<div>
    <h1 class="my-2">Notes</h1><hr>

    <ul class="py-5">
        <% @notes.each do |note| %>
            <li class="text-blue-600">
            <%= link_to note.title, note %>
            </li>
        <% end %>
    </ul>
    <% if current_user %>            
        <%= link_to "New Note",
        new_note_path, class: 
        "py-2 text-green-500 p-1 border border-green-500" %>
     <% end %>
</div>
