<div class="mx-auto">
    <h1 class="my-2 font-medium text-2xl text-orange-500 font-sans underline">Notes</h1>

    <ul class="py-5 list-disc list-outside divide-y divide-orange-200">
        <% @notes.each do |note| %>
            <li class="text-orange-400 hover:font-bold">
            <%= link_to note.title, note %>
            </li>
        <% end %>
    </ul>
    <% if current_user %>            
        <%= link_to "New Note",
        new_note_path, class: 
        "py-2 text-green-500 p-1 border border-green-500" %>
     <% end %>
</div>
