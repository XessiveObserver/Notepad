<div class="mx-auto">
    <div class="my-3 font-semibold">
        <h1><%= @note.title %></h1>
    </div>

    <div class="py-3"><%= @note.body %></div>
    <div>
        <% if current_user %>
            <%= link_to "Edit Note", edit_note_path(@note), class: "text-blue-300" %>
            <%= link_to "Delete Note", note_path(@note), data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
            }, class: "text-green-300"%>
        <% end %>
    </div>
    
    <div class="py-5">
        <%= link_to "Back to notes",
            notes_path, class: 
            "py-2 text-green-500 p-1 m-2 border border-green-500" %>
    </div>
</div>
